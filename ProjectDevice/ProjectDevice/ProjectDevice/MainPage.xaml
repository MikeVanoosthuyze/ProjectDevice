<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectDevice.MainPage">

    <ListView x:Name="lvwCocktail" BackgroundColor="#FFF1E4">
        <ListView.ItemTemplate >
            <DataTemplate>
                <ImageCell ImageSource="{Binding Image}" Text="{Binding Name}" TextColor="Black" Detail="{Binding Ingredient1}"  DetailColor="#864A15"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
