<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectDevice.Alcoholic">
    <ContentPage.Content>

        <ListView x:Name="lvwAlcoholicCocktail" BackgroundColor="#FFF1E4" ItemSelected="lvwAlcoholicCocktail_ItemSelected">
        <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Image}" Text="{Binding Name}" TextColor="Black" Detail="{Binding Alcoholic}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

    </ContentPage.Content>
</ContentPage>